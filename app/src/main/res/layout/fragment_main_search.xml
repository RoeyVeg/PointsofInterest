<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainSearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:elevation="5dp"
                    android:background="#3682b3c6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Food" />


                    <View
                        android:id="@+id/divider3"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="#9a9eb3" />

                    <ImageView
                        android:id="@+id/foodSearchBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/ic_restaurant_name" />


                </LinearLayout>


                <LinearLayout
                    android:elevation="5dp"
                    android:background="#3682b3c6"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hangout" />


                    <View
                        android:id="@+id/divider4"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="#9a9eb3" />

                    <ImageView
                        android:id="@+id/hangoutSearchBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_hangout_name" />

                </LinearLayout>


                <LinearLayout
                    android:elevation="5dp"
                    android:background="#3682b3c6"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Transport" />


                    <View
                        android:id="@+id/divider5"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="#9a9eb3" />

                    <ImageView
                        android:id="@+id/transportSearchBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/ic_transport_name" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:elevation="5dp"
                    android:background="#3682b3c6"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="\nFinancial" />


                    <View
                        android:id="@+id/divider6"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="#9a9eb3" />


                    <ImageView
                        android:id="@+id/financeSearchBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/ic_finance_name" />

                </LinearLayout>

                <LinearLayout
                    android:elevation="5dp"
                    android:background="#3682b3c6"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Last\nSearch" />


                    <View
                        android:id="@+id/divider2"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="#9a9eb3" />

                    <ImageView
                        android:id="@+id/lastSearchBtnInMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/ic_last_search_btn" />


                </LinearLayout>

                <LinearLayout
                    android:elevation="5dp"
                    android:background="#3682b3c6"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="\nHospital" />


                    <View
                        android:id="@+id/divider7"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="#9a9eb3" />

                    <ImageView
                        android:id="@+id/hospitalBtnInMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/ic_hospital_blue_btn" />


                </LinearLayout>





            </LinearLayout>

        </LinearLayout>



    </ScrollView>





</android.support.constraint.ConstraintLayout>